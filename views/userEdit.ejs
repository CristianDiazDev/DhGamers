<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>

  <body>
    <%- include("./partials/header") %>

      <!--Fin del Header-->

      <!--Registration Form-->
      <div class="main-form-register">
        <form action="/users/edit/<%=usuario.id%>?_method=PUT" method="POST" class="form" enctype="multipart/form-data">
          <!--TITLE-->
          <h1 class="title-register">Bienvenido a DH-GAMERS</h1>
          <h2 class="subtitle-register">Editá tu cuenta personal</h2>
          <!--DATA ENTRY BOXES-->
          <input class="register-boxes" type="text" name="completeName" placeholder="Nombre y Apellido"
            value=<%=usuario.completeName%> >
          <% if (locals.errors && errors.completeName) { %>
            <p class="errors">
              <%= errors.completeName.msg %>
            </p>
            <% } %>
              <input class="register-boxes" type="text" name="userName" placeholder="Nombre de usuario/a"
                value=<%=usuario.userName%>>
              <% if (locals.errors && errors.userName) { %>
                <p class="errors">
                  <%= errors.userName.msg %>
                </p>
                <% } %>
                  <p class="date-register"><label> Fecha de Nacimiento:</label></p><input class="register-boxes"
                    id="date" type="date" name="birthday" value=<%=usuario.birthday%>>
                  <% if (locals.errors && errors.birthday) { %>
                    <p class="errors">
                      <%= errors.birthday.msg %>
                    </p>
                    <% } %>
                      <input class="register-boxes" type="text" name="address" placeholder="Domicilio" value=<%=usuario.address%>>
                      <input class="register-boxes" type="tel" name="phone" placeholder="Teléfono" value=<%=usuario.phone%>>
                      <input class="register-boxes" type="text" name="email" placeholder="Email" value=<%=usuario.email%>>
                      <% if (locals.errors && errors.email) { %>
                        <p class="errors">
                          <%= errors.email.msg %>
                        </p>
                        <% } %>
                          <input class="register-boxes" type="password" name="password" placeholder="Contraseña">
                          <% if (locals.errors && errors.password) { %>
                            <p class="errors">
                              <%= errors.password.msg %>
                            </p>
                            <% } %>
                              <p class="password-text">Use 8 o más caracteres con una combinación de letras mayúsculas y
                                minúsculas,
                                números y símbolos (!@#$%)
                              </p>
                              <input class="register-boxes" type="password" name="confirmPassword"
                                placeholder="Confirmar Contraseña">
                              <% if (locals.errors && errors.confirmPassword) { %>
                                <p class="errors">
                                  <%= errors.confirmPassword.msg %>
                                </p>
                                <% } %>
                                  <label class="upload-photo">Subí tu Foto de Perfil: </label>
                                  <input class="file-register" type="file" name="profilePhoto">
                                  <% if (locals.errors && errors.profilePhoto) { %>
                                    <p class="errors">
                                      <%= errors.profilePhoto.msg %>
                                    </p>
                                    <% } %>

                                      <!--TERM and CONDITIONS-->
                                      <p class="term"><input type="checkbox" name='termsAndConditions'> Estoy de acuerdo
                                        con <a class="term2" href="#">Terminos y
                                          Condiciones</a>
                                        <% if (locals.errors && errors.termsAndConditions) { %>
                                          <p class="errors">
                                            <%= errors.termsAndConditions.msg %>
                                          </p>
                                          <% } %>
                                      </p>

                                                                            <!--BUTTON-->
                                                                            <br>
                                      <div class="button">
                                        <button type="submit" class="button-register-account">ACTUALIZAR CUENTA</button>
                                      </div>
      </div>
      </form>

      </main>

      <%- include("./partials/footer") %>


        <script src="js/slider.js"></script>
        <script src="/js/main.js"></script>
  </body>

</html>