<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>

            <!--Fin del Header-->


            <!--Registration Form-->
            <div class="main-form-login">

                <form action="/users/login" method="POST" class="form">
                    <!--TITLE-->
                    <h1 class="title-login">Bienvenido a DH-GAMERS</h1>
                    <h2 class="subtitle-login">Ingresá a tu cuenta personal</h2>

                    <!--DATA ENTRY BOXES-->

                    <% if (locals.errors) { locals.errors.forEach(error=> { %>
                        <p class="feedback" color:red>
                            <%= error.msg %>
                        </p>
                        <% }); } %>

                            <input class="boxes" type="text" name="email" placeholder="Email" >

                            <input class="boxes" type="password" name="password" placeholder="Contraseña" >
                            <p class="keep-in-sign-text"><input type="checkbox"> <strong> Mantenerme Registrado
                                </strong></p>
                            <br>
                            <div class="olv-contraseña">
                                <a href="#">¿Olvidaste tu contraseña?</a>
                            </div>

                            <!--BUTTON-->

                            <div class="button">
                                <button type="submit" class="button-login-account">INGRESAR</button>
                            </div>
                </form>

            </div>

            </main>
            <%- include("./partials/footer") %>


                <script src="js/slider.js"></script>
                <script src="/js/main.js"></script>
    </body>

</html>